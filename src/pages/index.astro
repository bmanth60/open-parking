---
import Layout from "../layouts/Layout.astro";
import Form from "../components/Form.astro";
import RegistrationHistory from "../components/RegistrationHistory.astro";
import Rules from "../components/Rules.astro";
---

<Layout title="Open Parking">
  <main
    class="flex mt-4 px-2 gap-4 justify-center min-h-[calc(100vh-64px)] md:items-center"
  >
    <div
      class="flex flex-col justify-start max-md:items-center gap-4 items-start"
    >
      <div class="flex w-full gap-4 max-md:flex-col">
        <Form />
        <RegistrationHistory />
      </div>
      <Rules />
    </div>
  </main>
</Layout>
